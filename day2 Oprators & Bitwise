// let a = 20;
// let b = 32;
// let c = b++;   // a = 20, b = 33, c = 32
// a = b++;    // a = 33 , b = 34, c = 32
// b = c++;    // a = 33 , b = 32 , c = 33
// a = --c;    // a = 32 , b = 32 , c = 32
// c = b--;    // a = 32 , b = 31 , c = 32

